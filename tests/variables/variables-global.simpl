// Global variables declaration, string concatenation and assignments

// Numerical variables
var num1 = 1;
var num2 = 2;
var num3 = num1 + num2;

// String variables
var str1 = "test";
var str2 = "something";
var str3 = str1 + str2;

// Test numerical variables
print num1;                                         // expect 1
print num2;                                         // expect 2
print num3;                                         // expect 3

// Test string variables
print str1;                                         // expect test
print str2;                                         // expect something
print str3;                                         // expect testsomething

// Test reassignment
num1 = 10;
num2 = 20;
num3 = num1 + num2;

str1 = "hello";
str2 = "world";
str3 = str1 + "-" + str2;

// Reassigned numerical variables
print num1;                                         // expect 10
print num2;                                         // expect 20
print num3;                                         // expect 30

// Reassigned string variables
print str1;                                         // expect hello
print str2;                                         // expect world
print str3;                                         // expect hello-world
