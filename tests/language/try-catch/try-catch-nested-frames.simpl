// Try catch with nested frames

fun throwAt(num, message) {
    if (num == 1) {
        if (true) {
            if (false) {

            } else {
                while (true) {
                    for (;;) {
                        throw message;
                    }
                }
            }
        }
    }
    throwAt(num - 1, message);
}

try {
    throwAt(1, "Throwing after 1 fun frames");
} catch (message) {
    print message;                                                              // expect Throwing after 1 fun frames
}
print "after";                                                                  // expect after

