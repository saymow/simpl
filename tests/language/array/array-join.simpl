// Array.join

var arr = [1, 2, 3, 4, 5];

System.log(arr.join(", "));                                                 // expect 1, 2, 3, 4, 5
System.log(arr.join(" "));                                                  // expect 1 2 3 4 5
System.log(arr.join(""));                                                   // expect 12345
System.log(arr.join("some-strange-string"));                                // expect 1some-strange-string2some-strange-string3some-strange-string4some-strange-string5
System.log([1].join("some-strange-string"));                                // expect 1
System.log([].join("some-strange-string"));                                 // expect 
