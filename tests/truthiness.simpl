// What is truthiness?

class MyClass {}
fun myFun() {}

var objectInstance = MyClass();
var arr = [1, 2, 3];
var emptyArr = [];

// Numbers
print !!0;                                      // expect true
print !!1;                                      // expect true
print !!99;                                     // expect true
print !!-1;                                     // expect true
print !!3.14;                                   // expect true
print !!-3.14;                                  // expect true

// Strings
print !!"";                                     // expect true
print !!"abc";                                  // expect true
print !!" ";                                    // expect true
print !!"\n";                                   // expect true

// Arrays
print !!arr;                                    // expect true
print !!emptyArr;                               // expect true

// Functions and classes
print !!MyClass;                                // expect true
print !!myFun;                                  // expect true
print !!objectInstance;                         // expect true

// Booleans and nil
print !!true;                                   // expect true
print !!nil;                                    // expect false
print !!false;                                  // expect false
