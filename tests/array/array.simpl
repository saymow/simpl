// Array declaration, get, and assignment

var arr = [1, fun () { print "funExpr";}, nil, "str"];

print arr;                                                                          // expect [1, <fn fun>, nil, str]
print arr[0];                                                                       // expect 1
print arr[2];                                                                       // expect nil
print arr[-1];                                                                      // expect nil
print arr[99];                                                                      // expect nil
arr[1]();                                                                           // expect funExpr

// += operator
arr[3] += "ing";
arr[0] += 9;

// Test += operator results
print arr[3];                                                                       // expect string
print arr[0];                                                                       // expect 10

// -= operator
arr[0] -= 5;

// Test -= operator results
print arr[0];                                                                       // expect 5

// *= operator
arr[0] *= 2;

// Test *= operator results
print arr[0];                                                                       // expect 10

// /= operator
arr[0] /= 2;

// Test /= operator results
print arr[0];                                                                       // expect 5

arr[0] = "a";
arr[1] = "b";
arr[2] = "c";
arr[3] = "d";

print arr;                                                                          // expect [a, b, c, d]
print arr[0];                                                                       // expect a
print arr[1];                                                                       // expect b
print arr[2];                                                                       // expect c
print arr[3];                                                                       // expect d